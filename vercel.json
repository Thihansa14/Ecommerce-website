{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"  // Ensure your frontend build outputs to this directory
      }
    },
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/server.js"  // Route API requests to your backend
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"  // Serve the frontend from index.html for all other routes
    }
  ]
}
